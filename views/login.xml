<Alloy>
    <Window backgroundColor="#f3f3f3">
        <View class="vgroup">
            <ImageView class="login-logo"/>
            <Label class="login-title h2" text="Log In"/>
            <View class="login-view bg-white vgroup top-buffer">
                <TextField class="login-textfield1" hintText="Username or Email"/>
                <TextField class="login-textfield top-buffer" hintText="Password"/>
                <Button class="btn-login top-buffer">Log In</Button>
                <Label class="h5" text="Don't have an account?" top="25"/>
                <Button backgroundColor="#8dc63f" class="btn-login top-buffer">Sign Up</Button>
            </View>
            <Label class="h5" text="Forgot Password?" top="25"/>
        </View>
    </Window>
</Alloy>
