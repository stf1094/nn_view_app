<Alloy>
    <Window id="Window_1" class="bg-white" title="Edit Project">
        <View class="vgroup">
            <!--Header-->
            <View backgroundColor="#f9f9f9" class="top" height="12%">
                <Label class="h4" text="Edit Project" top="10%"/>
                <Label class="h5" color="#444444" left="5%" text="Delete Project" top="10%"/>
                <Label class="h5" color="#f7941d" right="5%" text="Done" top="10%"/>
            </View>
            <!--Goal Label-->
            <View height="6%" top="20">
                <Label class="h5" text="Project" width="90%"/>
            </View>
            <!--Enter Task Text Field-->
            <View height="8%">
                <TextField class="eg-textfield" value="Whatever the project is currently"/>
            </View>
             <View class="top-buffer" height="6%">
                <Label class="h5" text="Goal" width="90%"/>
            </View>
            <!--Enter Task Text Field-->
            <View height="8%">
                <TextField class="eg-textfield" value="Whatever the goal is currently"/>
            </View>
            <!--date entries, start/end-->
            <View class="hgroup size" height="7.75%" left="5%" top="30">
                <Label class="h5" text="Start Date"/>
                <ImageView class="calendar-icon-square" image="/images/iphone/calendar-icon.png"/>
                <TextField class="textfield-date"/>
            </View>
            <View class="hgroup size" height="7.75%" left="6.75%" top="20">
                <Label class="h5" text="End Date"/>
                <ImageView class="calendar-icon-square" image="/images/iphone/calendar-icon.png"/>
                <TextField class="textfield-date"/>
            </View>
        </View>
    </Window>
</Alloy>
